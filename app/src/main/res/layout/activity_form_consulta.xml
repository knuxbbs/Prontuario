<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/activity_form_consulta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true"
            tools:context="br.ufba.dcc.prontuario.activity.consulta.FormConsultaActivity">

        <TextView android:id="@+id/textView_especialidade" android:textSize="18sp"
                  android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:paddingTop="5dp" android:paddingLeft="5dp" android:text="Especialidade médica:"/>

        <Spinner android:id="@+id/spinner_especialidade" android:layout_width="match_parent"
                 android:layout_height="30dp" android:paddingTop="5dp" android:spinnerMode="dialog"/>

        <EditText android:id="@+id/editText_medico" android:layout_width="match_parent"
                  android:layout_height="wrap_content" android:hint="Nome do médico"
                  android:nextFocusUp="@+id/editText_medico" android:nextFocusLeft="@+id/editText_medico"/>

        <EditText android:id="@+id/form_consulta_editText_data" android:layout_width="match_parent"
                  android:layout_height="wrap_content" android:hint="Data"/>

        <EditText android:id="@+id/editText_horario" android:layout_width="match_parent"
                  android:layout_height="wrap_content" android:hint="Horário"/>

        <EditText android:id="@+id/editText_endereco" android:layout_width="match_parent"
                  android:layout_height="wrap_content" android:hint="Endereço"/>

        <Button android:text="Anexar exames solicitados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/btnAnexarExames"/>

        <Button android:text="Registrar diagnóstico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/btnRegistrarDiagnostico"/>

    </LinearLayout>
</ScrollView>
